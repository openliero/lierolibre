	menu/integerBehavior.cpp
	menu/itemBehavior.cpp
	menu/menu.cpp
	menu/menuItem.cpp
	menu/timeBehavior.cpp
	;

MakeLocate openliero$(SUFEXE) : $(TOP)/_bin ;

LinkLibraries openliero : libgvl ;

SubInclude TOP gvl ;
