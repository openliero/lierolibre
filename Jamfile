SubDir TOP ;

C++FLAGS = -Wall -I$(TOP) -I/usr/include -DNDEBUG ;
CFLAGS = -Wall -I$(TOP) -I/usr/include -DNDEBUG ;
OPTIM = -O3 ;
LINK = "g++" ;
LINKLIBS on openliero$(SUFEXE) = -lSDL -lSDL_mixer -lrt -lconfig++ ;

